<h1>Edit {{bestPractice.title}}</h1>

<form action="/best_practices/edit" method="POST">
    <div class="input-field">
        <input value="{{{bestPractice.title}}}" placeholder="Title" name="title" id="title" type="text" class="validate" required>
        <label for="title">BP Title</label>
    </div>

    <p>
        <label>
            {{#if bestPractice.type_dahboard}}
                <input type="checkbox" name="type_dahboard" class="filled-in" checked="checked" />
            {{else}}
                <input type="checkbox" name="type_dahboard" class="filled-in" />
            {{/if}}
            <span>Dashboard BP</span>
        </label>
    </p>
    
    <p>
        <label>
            {{#if bestPractice.type_wp}}
                <input type="checkbox" name="type_wp" class="filled-in" checked="checked" />
            {{else}}
                <input type="checkbox" name="type_wp" class="filled-in" />
            {{/if}}
            <span>Wordpress code BP</span>
        </label>
    </p>
    
    <p>
        <label>
            {{#if bestPractice.type_php}}
                <input type="checkbox" name="type_php" class="filled-in" checked="checked" />
            {{else}}
                <input type="checkbox" name="type_php" class="filled-in" />
            {{/if}}
            <span>PHP BP</span>
        </label>
    </p>
    
    <p>
        <label>
            {{#if bestPractice.type_css}}
                <input type="checkbox" name="type_css" class="filled-in" checked="checked" />
            {{else}}
                <input type="checkbox" name="type_css" class="filled-in" />
            {{/if}}
            <span>SCSS/CSS BP</span>
        </label>
    </p>

    <div class="input-field">
        <textarea placeholder="Content" name="content" id="content" class="validate">
            {{{bestPractice.content}}}
        </textarea>
    </div>

    <input type="hidden" name="id" value="{{bestPractice._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn waves-effect waves-light" type="submit" name="action">
        Edit
        <i class="material-icons right">send</i>
    </button>
</form>

<form id="delete_bestPractice" action="/best_practices/delete" method="POST">
    <input type="hidden" name="id" value="{{bestPractice._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn waves-effect waves-light red" type="submit" name="action">
        Delete
        <i class="material-icons right">delete_forever</i>
    </button>
</form>